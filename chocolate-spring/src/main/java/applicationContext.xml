<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

          <bean  class="com.xworkz.chocolate.Chocolate">
           
           
          
         <constructor-arg name="name"  value ="MilkyBar"></constructor-arg> 
         <constructor-arg name="brand" value="Nestle"></constructor-arg>
         
         <property name="size" value="medium"></property>
         <property name="price" value="20.00"></property>
         
         </bean>
  </beans>         